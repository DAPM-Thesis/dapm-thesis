{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://www.dapm.org/pipeline_draft_schema.json",
  "title": "Pipeline Draft",
  "type": "object",
  "properties": {
    "faultToleranceLevel": {
      "description": "Defines the fault tolerance strategy for the entire pipeline. If omitted, a default behavior (e.g., LEVEL_0_IGNORE_FAULTS) is assumed by the application.",
      "type": "string",
      "enum": [
        "LEVEL_0_IGNORE_FAULTS",
        "LEVEL_1_NOTIFY_ONLY",
        "LEVEL_2_TERMINATE_ENTIRE_PIPELINE",
        "LEVEL_3_KEEP_RUNNING_PARTIAL_PIPELINE",
        "LEVEL_4_RESTART_FAILED_INSTANCE"
      ]
    },
    "processing elements": {
      "type": "array",
      "items": {
        "$ref": "https://www.dapm.org/processing_element_reference_schema.json"
      },
      "minItems": 2,
      "uniqueItems": true,
      "allOf": [
        {
          "contains": {
            "type": "object",
            "properties": { "inputs": { "type": "array", "maxItems": 0 } }
          },
          "required": ["inputs"]
        },
        {
          "contains": {
            "type": "object",
            "properties": { "output": { "type": "null" } }
          },
          "required": ["output"]
        }
      ]
    },
    "channels": {
      "type": "array",
      "items": { "$ref": "https://www.dapm.org/channel_reference_schema.json" },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": ["processing elements", "channels"],
  "additionalProperties": false
}
